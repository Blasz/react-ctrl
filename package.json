{
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^22.0.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.64.0",
    "jest": "^22.0.3",
    "microbundle": "^0.4.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "jest": {
    "setupFiles": ["./jest/setup-enzyme"],
    "modulePathIgnorePatterns": ["./node_modules"]
  },
  "scripts": {
    "test": "jest",
    "build:es": "BABEL_ENV=es babel src --out-dir es",
    "build:esnext": "BABEL_ENV=esnext babel src --out-dir esnext",
    "build:node": "BABEL_ENV=node babel src --out-dir node",
    "build": "microbundle",
    "prepublish": "npm run build"
  },
  "files": ["es/", "esnext/", "node/"],
  "main": "dist/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "name": "react-ctrl",
  "description":
    "A higher-order-component for authoring components that can be both stateful and stateless for certain props, using the controlled / uncontrolled pattern.",
  "source": "src/index.js",
  "dependencies": {
    "conartist": "^0.15.1",
    "nodent": "^3.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/treshugart/react-ctrl.git"
  },
  "author": "Trey Shugart <treshugart@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/treshugart/react-ctrl/issues"
  },
  "homepage": "https://github.com/treshugart/react-ctrl#readme",
  "keywords": [
    "react",
    "controlled",
    "uncontrolled",
    "stateful",
    "stateless",
    "props",
    "state"
  ]
